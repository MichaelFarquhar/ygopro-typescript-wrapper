{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "bundler",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["esnext"]
  },
  "include": ["src/**/*"]
}
